{
    "name": "kata.js",
    "private": true,
    "description": "A code kata is an exercise in programming which helps a programmer hone their skills through practice and repetition.",
    "author": {
        "name": "Marco Montalbano",
        "email": "me@marcomontalbano.com",
        "url": "https://marcomontalbano.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/marcomontalbano/kata.js"
    },
    "keywords": [
        "marcomontalbano",
        "kata",
        "tdd",
        "test driven development",
        "tests"
    ],
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "test": "eslint ./src/**/*.js && mocha",
        "watch": "chokidar ./src/**/*.[j,t]s -c 'npm test -- --reporter dot'",
        "coverage": "nyc mocha --reporter dot",
        "stryker": "stryker run",
        "dep:major": "npx npm-check-updates --packageFile '**/package.json' -u",
        "dep:minor": "npm run dep:major -t minor"
    },
    "devDependencies": {
        "@babel/core": "~7.11.0",
        "@babel/preset-env": "~7.11.0",
        "@babel/register": "~7.10.5",
        "@stryker-mutator/core": "~4.0.0",
        "@stryker-mutator/mocha-runner": "~4.0.0",
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.14.3",
        "chai": "~4.2.0",
        "chokidar-cli": "~2.1.0",
        "eslint": "~7.6.0",
        "mocha": "~8.1.0",
        "nyc": "~15.1.0",
        "sinon": "~9.0.2",
        "stryker-cli": "~1.0.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "nyc": {
        "reporter": [
            "lcov",
            "text",
            "text-summary"
        ]
    }
}
